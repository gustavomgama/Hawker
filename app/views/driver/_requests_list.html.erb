<!-- app/views/driver/_requests_list.html.erb -->
<div class="p-6">
  <% if requests.any? %>
    <div class="space-y-4">
      <% requests.each_with_index do |request, index| %>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <h3 class="text-lg font-medium text-gray-900">
                <%= index + 1 %>. <%= request[:customer_name] %>
              </h3>
              <p class="text-gray-600 mt-1"><%= request[:location] %></p>
              <p class="text-sm text-gray-500 mt-2">
                Pedido feito: <%= time_ago_in_words(request[:timestamp]) %> atrás
              </p>
            </div>

            <div class="ml-4">
              <%= form_with url: driver_complete_request_path(request[:id]), method: :post, local: false do |form| %>
                <%= form.submit "Concluído",
                               class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md text-sm font-medium" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2 2v-5m16 0h-2M4 13h2m0 0V9a2 2 0 012-2h2a2 2 0 012 2v4.01"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhum pedido</h3>
      <p class="mt-1 text-sm text-gray-500">Os pedidos aparecerão aqui automaticamente</p>
    </div>
  <% end %>
</div>
